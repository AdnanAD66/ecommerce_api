const mongoose = require('mongoose');

const productSchema = new mongoose.Schema({
    name: {
        type: String,
        required: true,
        trim: true
    },
    description: {
        type: String,
        required: true,
        trim: true
    },
    price: {
        type: Number,
        required: true
    },
    createdBy: {
        type: mongoose.Schema.Types.ObjectId,
        ref: 'User',
        required: true
    }
});

productSchema.set('toJSON', {
    virtuals: true,
    transform: (_, ret) => {
        delete ret.__v;
        return ret;
    }
});

module.exports = mongoose.model('Product', productSchema);